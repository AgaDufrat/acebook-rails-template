<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">My Profile</h3>
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-md-3 col-lg-3 " align="center">
        <%= image_tag @user.avatar.url, size:"100x100" %>
      </div>
      <div class=" col-md-9 col-lg-9 ">
        <table class="table table-user-information">
          <tbody>
            <tr>
              <td>Username:</td>
              <td><%= @user.username %></td>
            </tr>
            <tr>
              <td>First name:</td>
              <td><%= @user.firstname %></td>
            </tr>
            <tr>
              <td>Last name:</td>
              <td><%= @user.lastname %></td>
            </tr>
            <tr>
              <td>Date of Birth</td>
              <td><%= @user.birthday %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td>Bio</td>
              <td><%= @user.bio %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

 <div class="panel-footer">
    <span class="pull-right">
        <a href="edit.html" type="button" class="btn btn-info mb-2">Edit</a>
        <%= button_to("Delete", cancel_user_registration_path(@user.id),
          data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger") %>
    </span>
  </div>

  <div id="your-friends">
    <br>
    <h3>Your friends: </h3>
    <hr>
    <div class="card-columns">
      <% @friends.each do |friend| %>
          <div class="card col-5">
            <div class="card-body">
              <%= image_tag friend.avatar.url, size:"50x50", class: "mr-2 rounded-circle center"%>
              <%= "#{friend.firstname} #{friend.lastname}" %>
              <%= link_to "unfriend","#" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
